{
  "id": "reanima",
  "title": "Re:Anima - Beyond Crunch",
  "description": "Una version alternativa del sistema Anima Beyond Fantasy con el objetivo de implementar multiples comodidades adicionales",
  "version": "0.1.0",
  "compatibility": {
    "minimum": "13",
    "verified": "13"
  },
  "url": "https://github.com/gitkinu/reanima",
  "manifest": "https://raw.githubusercontent.com/gitkinu/reanima/master/system.json",
  "download": "https://github.com/gitkinu/reanima/archive/refs/tags/release.zip",
  "authors": [
    {
      "name": "Kinu",
      "discord": "kinu_"
    }
  ],
  "esmodules": ["reanima.mjs"],
  "styles": ["styles/reanima.css"],
  "documentTypes": {
  "Actor": {
    "character": {
      "htmlFields": ["details.biography.public", "details.biography.private", "details.biography.appearance"]
    }
  },
  "Item": {
    "weapon": {
      "htmlFields": ["description.public", "description.secret"]
    },
    "armor": {
      "htmlFields": ["description.public", "description.secret"]
    },
    "consumable": {
      "htmlFields": ["description.public", "description.secret"]
    },
    "tool": {
      "htmlFields": ["description.public", "description.secret"]
    },
    "advantages": {
      "htmlFields": ["description"]
    },
    "disadvantages": {
      "htmlFields": ["description.public"]
    },
    "spells": {
      "htmlFields": ["description"]
    },
    "psychics": {
      "htmlFields": ["description"]
    },
    "ki": {
      "htmlFields": ["description"]
    },
    "nemesis": {
      "htmlFields": ["description"]
    },
    "styletables": {
      "htmlFields": ["description"]
    }
  },
  "JournalEntryPage": {
    "category": {
      "htmlFields": []
    }
  }
  },
  "grid": {
    "type": 1,
    "distance": 1,
    "units": "m",
    "diagonals": 1
  },
  "background": "systems/reanima/ui/background.webp"
}
